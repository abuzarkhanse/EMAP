@model IEnumerable<EMAP.Domain.Fyp.FypSupervisor>

@{
    ViewData["Title"] = "FYP Supervisors";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">FYP Supervisors</h2>
            <small class="text-muted">Departmental list with fields & slots</small>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Supervisor
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Department</th>
                        <th>Field</th>
                        <th>Email</th>
                        <th>Slots</th>
                        <th>Status</th>
                        <th style="width: 120px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@s.Name</td>
                            <td>@s.Department</td>
                            <td>@s.FieldOfExpertise</td>
                            <td>@s.Email</td>
                            <td>@s.CurrentSlots / @s.MaxSlots</td>
                            <td>
                                @if (s.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@s.Id"
                                   class="btn btn-sm btn-outline-primary">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="text-center text-muted py-4">
                    No supervisors added yet.
                </div>
            }
        </div>
    </div>
</div>
