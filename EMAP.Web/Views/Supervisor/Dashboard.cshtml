@using EMAP.Domain.Fyp
@model EMAP.Web.ViewModels.SupervisorDashboardViewModel

@{
    ViewData["Title"] = "Supervisor Dashboard";
}

<div class="container py-4">

    <!-- ===== HEADER ===== -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Supervisor Dashboard</h2>
            <p class="text-muted mb-0">
                Manage your supervised FYP groups and evaluate student proposals.
            </p>
        </div>
        <span class="badge bg-success-subtle border border-success text-success px-3 py-2">
            <i class="bi bi-person-badge me-1"></i>
            Logged in as Supervisor
        </span>
    </div>

    <!-- ===== METRICS ===== -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small mb-1">Pending Requests</div>
                    <div class="fs-3 fw-semibold text-warning">@Model.PendingRequests</div>
                    <div class="small text-muted">
                        Student groups awaiting your decision.
                    </div>
                    <a asp-action="PendingRequests" class="small d-inline-block mt-2">
                        Review requests <i class="bi bi-arrow-right-short"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small mb-1">Active Groups</div>
                    <div class="fs-3 fw-semibold text-success">@Model.ActiveGroups</div>
                    <div class="small text-muted">
                        Groups currently under your supervision.
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small mb-1">Pending Proposals</div>
                    <div class="fs-3 fw-semibold text-info">@Model.PendingProposals</div>
                    <div class="small text-muted">
                        Proposals requiring review or feedback.
                    </div>
                    <a asp-action="Proposals" class="small d-inline-block mt-2">
                        View proposals <i class="bi bi-arrow-right-short"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small mb-1">Approved for Defense</div>
                    <div class="fs-3 fw-semibold text-primary">@Model.ApprovedForDefenseProposals</div>
                    <div class="small text-muted">
                        Proposals cleared for defense scheduling.
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-journal-check me-1"></i>
                        Chapter Reviews
                    </h6>

                    <h3 class="text-warning">
                        @ViewBag.PendingChapterReviews
                    </h3>

                    <p class="small text-muted mb-2">
                        Chapters awaiting your review.
                    </p>

                    <a asp-controller="Supervisor"
                       asp-action="ChapterReviews"
                       class="btn btn-sm btn-outline-primary">
                        Review Chapters →
                    </a>
                </div>
            </div>
        </div>

    </div>

    <!-- ===== MAIN CONTENT ===== -->
    <div class="row g-4">

        <!-- ===== GROUPS ===== -->
        <div class="col-lg-7">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-people-fill me-2"></i>
                        Supervised FYP Groups
                    </h5>

                    @if (!Model.Groups.Any())
                    {
                        <p class="text-muted small mb-0">
                            No student groups assigned yet.
                        </p>
                    }
                    else
                    {
                        <table class="table table-sm align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Batch</th>
                                    <th>Group Members</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var g in Model.Groups.OrderByDescending(g => g.FypCall.AnnouncementDate))
                                {
                                    <tr>
                                        <td>@g.FypCall.Batch</td>
                                        <td class="small">
                                            <div><strong>Leader:</strong> @g.LeaderId</div>
                                            @if (!string.IsNullOrEmpty(g.Member2Id))
                                            {
                                                <div><strong>Member:</strong> @g.Member2Id</div>
                                            }
                                            @if (!string.IsNullOrEmpty(g.Member3Id))
                                            {
                                                <div><strong>Member:</strong> @g.Member3Id</div>
                                            }
                                        </td>
                                        <td>
                                            @if (g.Status == GroupStatus.PendingSupervisorApproval)
                                            {
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            }
                                            else if (g.Status == GroupStatus.Approved)
                                            {
                                                <span class="badge bg-success">Approved</span>
                                            }
                                            else if (g.Status == GroupStatus.Rejected)
                                            {
                                                <span class="badge bg-danger">Rejected</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@g.Status</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>

        <!-- ===== PROPOSALS ===== -->
        <div class="col-lg-5">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-journal-check me-2"></i>
                        Recent Proposals
                    </h5>

                    @if (!Model.RecentProposals.Any())
                    {
                        <p class="text-muted small mb-0">
                            No proposals submitted yet.
                        </p>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush small">
                            @foreach (var p in Model.RecentProposals)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-start">
                                    <div>
                                        <div class="fw-semibold">@p.Title</div>
                                        <div class="text-muted">
                                            Group Leader: @p.Group.LeaderId
                                        </div>
                                        <div class="text-muted">
                                            Submitted:
                                            @p.SubmittedAt.ToString("dd MMM yyyy HH:mm")
                                        </div>
                                        <div class="text-muted">
                                            Status: @p.Status
                                        </div>
                                    </div>
                                    <a asp-action="Review"
                                       asp-route-id="@p.Id"
                                       class="btn btn-sm btn-outline-primary ms-2">
                                        Review
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>

            <!-- ===== TIP ===== -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-title mb-2">
                        <i class="bi bi-lightbulb me-2"></i>
                        Academic Tip
                    </h6>
                    <p class="small text-muted mb-0">
                        Early proposal feedback improves research quality and reduces
                        delays during defense scheduling.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
