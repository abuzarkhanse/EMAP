@model EMAP.Domain.Fyp.FypSupervisor

@{
    ViewData["Title"] = "Add Supervisor";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Add FYP Supervisor</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <form asp-action="Create" asp-controller="Supervisor" method="post">
    
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Department</label>
                        <input asp-for="Department" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Field of Expertise</label>
                        <input asp-for="FieldOfExpertise" class="form-control" />
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Max FYP Slots</label>
                        <input asp-for="MaxSlots" class="form-control" />
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Current Slots</label>
                        <input asp-for="CurrentSlots" class="form-control" readonly />
                    </div>

                    <div class="col-md-6 mb-3 d-flex align-items-center">
                        <div class="form-check form-switch mt-4">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label class="form-check-label">Available for FYP</label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">
                    Save Supervisor
                </button>

            </form>
        </div>
    </div>
</div>
