@model EMAP.Web.ViewModels.Fyp.SubmitProposalViewModel

@{
    ViewData["Title"] = "Submit Proposal";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Submit Proposal</h2>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to FYP Portal</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">

            <p class="mb-2">
                <strong>Supervisor:</strong> @Model.SupervisorName
            </p>

            @if (Model.ExistingStatus != null)
            {
                <p class="small mb-1">
                    <strong>Last status:</strong> @Model.ExistingStatus
                </p>
                @if (!string.IsNullOrWhiteSpace(Model.ExistingFeedback))
                {
                    <p class="small text-muted">
                        <strong>Supervisor feedback:</strong> @Model.ExistingFeedback
                    </p>
                }
            }

            <form asp-action="SubmitProposal" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="GroupId" />

                <div class="mb-3">
                    <label class="form-label fw-bold">FYP / Proposal Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label class="form-label fw-bold">Proposal file</label>
                    <input type="file" name="proposalFile" class="form-control" />
                    <div class="form-text">
                        Upload PDF or DOCX file of your proposal.
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">
                    Upload Proposal
                </button>
            </form>

        </div>
    </div>
</div>
