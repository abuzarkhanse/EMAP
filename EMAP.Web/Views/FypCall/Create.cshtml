@model EMAP.Domain.Fyp.FypCall

@{
    ViewData["Title"] = "Create FYP Call";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Create FYP Call</h2>
        <a href="/FypCall/Index" class="btn btn-outline-secondary">Back to List</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">

            <form method="post">
                <div class="mb-3">
                    <label class="form-label fw-bold">Batch</label>
                    <input type="text" class="form-control" asp-for="Batch" placeholder="e.g. F22, SP25" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Title</label>
                    <input type="text" class="form-control" asp-for="Title" placeholder="FYP Call Announcement" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Announcement Date</label>
                        <input type="date" class="form-control" asp-for="AnnouncementDate" required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Proposal Deadline</label>
                        <input type="date" class="form-control" asp-for="ProposalDeadline" required />
                    </div>
                </div>

                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" checked />
                    <label class="form-check-label">Active FYP Call</label>
                </div>

                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-check-circle"></i> Save FYP Call
                </button>
            </form>

        </div>
    </div>
</div>
