@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container-fluid py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Student Dashboard</h2>
            <p class="text-muted mb-0">
                EMAP – Academic Project & Editorial Platform
            </p>
        </div>
        <div class="text-end">
            <span class="badge bg-light text-dark border px-3 py-2">
                <i class="bi bi-person-circle me-1"></i>
                @User.Identity?.Name
            </span>
        </div>
    </div>

    <!-- Key Modules -->
    <div class="row g-3 mb-4">

        <!-- FYP MODULE -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="mb-0">
                            <i class="bi bi-mortarboard-fill me-2"></i>Final Year Project (FYP)
                        </h5>
                        <span class="badge bg-success">Active</span>
                    </div>

                    <p class="text-muted small">
                        Manage your FYP lifecycle including group formation, supervisor selection,
                        proposal submission and review.
                    </p>

                    <ul class="small mb-3">
                        <li>Create / manage FYP group</li>
                        <li>Select supervisor & track approval</li>
                        <li>Submit proposal and revisions</li>
                        <li>View feedback and defense status</li>
                    </ul>

                    <div class="mt-auto">
                        <a asp-controller="Fyp" asp-action="Index"
                           class="btn btn-primary btn-sm me-2">
                            Open FYP Portal
                        </a>
                        <a href="#" class="btn btn-outline-secondary btn-sm">
                            View Guidelines
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- THESIS MODULE -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="mb-0">
                            <i class="bi bi-book-half me-2"></i>Thesis Module
                        </h5>
                        <span class="badge bg-secondary">Upcoming</span>
                    </div>

                    <p class="text-muted small">
                        Thesis registration, chapter submissions, plagiarism checks
                        and evaluation workflow.
                    </p>

                    <ul class="small mb-3">
                        <li>Register thesis topic</li>
                        <li>Upload chapters</li>
                        <li>Track evaluations</li>
                        <li>Final submission & approval</li>
                    </ul>

                    <div class="mt-auto">
                        <button class="btn btn-outline-secondary btn-sm" disabled>
                            Coming Soon
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Secondary Row -->
    <div class="row g-3">

        <!-- QUICK ACTIONS -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-lightning-charge-fill me-2"></i>Quick Actions
                    </h5>

                    <div class="d-grid gap-2">
                        <a asp-controller="Fyp" asp-action="Index"
                           class="btn btn-outline-primary btn-sm">
                            Go to FYP Portal
                        </a>
                        <a href="#" class="btn btn-outline-primary btn-sm">
                            View My Submissions
                        </a>
                        <a href="#" class="btn btn-outline-primary btn-sm">
                            Supervisor Feedback
                        </a>
                        <a href="~/templates/SRS Template.docx" class="btn btn-outline-secondary btn-sm">
                            Download Templates (SRS)
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- DEADLINES -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-calendar-event me-2"></i>Upcoming Deadlines
                    </h5>

                    <ul class="list-unstyled small mb-0">
                        <li class="mb-3">
                            <strong>FYP Proposal Submission</strong><br />
                            <span class="text-muted">Due: 15 Dec 2025</span><br />
                            <span class="badge bg-warning text-dark">5 days remaining</span>
                        </li>
                        <li class="mb-3">
                            <strong>Supervisor Approval</strong><br />
                            <span class="text-muted">Due: 22 Dec 2025</span>
                        </li>
                        <li>
                            <strong>Progress Presentation</strong><br />
                            <span class="text-muted">Tentative: Jan 2026</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- ACTIVITY -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-clock-history me-2"></i>Recent Activity
                    </h5>

                    <ul class="list-unstyled small mb-0">
                        <li class="mb-2">
                            ✅ Proposal draft saved<br />
                            <span class="text-muted">Today, 10:45 AM</span>
                        </li>
                        <li class="mb-2">
                            📩 Supervisor notification received<br />
                            <span class="text-muted">Yesterday</span>
                        </li>
                        <li>
                            📄 Template downloaded<br />
                            <span class="text-muted">2 days ago</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>

</div>
