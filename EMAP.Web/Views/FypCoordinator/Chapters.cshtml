@model EMAP.Web.Controllers.CoordinatorChaptersVm
@using EMAP.Domain.Fyp

@{
    ViewData["Title"] = "Chapter Announcements";
}

<div class="container py-4">

    <div class="card shadow-sm mb-3">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-1">Chapter Announcements</h4>
                <small class="text-muted">
                    Active Call: <strong>@Model.ActiveCallTitle</strong> (@Model.ActiveCallBatch)
                </small>
            </div>
            <a asp-action="Dashboard" class="btn btn-outline-secondary btn-sm">Back</a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-body">

            <table class="table table-sm align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Chapter</th>
                        <th>Status</th>
                        <th>Deadline</th>
                        <th style="width:260px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.Items)
                    {
                        <tr>
                            <td>
                                <strong>@c.ChapterType</strong>
                                @if (!string.IsNullOrWhiteSpace(c.Instructions))
                                {
                                    <div class="text-muted small mt-1">
                                        @c.Instructions
                                    </div>
                                }
                            </td>
                            <td>
                                @if (c.IsOpen)
                                {
                                    <span class="badge bg-success">Open</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Closed</span>
                                }
                            </td>
                            <td>
                                @(c.Deadline == null ? "-" : c.Deadline.Value.ToString("dd MMM yyyy"))
                            </td>
                            <td>
                                <div class="d-flex gap-2 flex-wrap">

                                    <a asp-action="EditChapter"
                                       asp-route-id="@c.Id"
                                       class="btn btn-outline-primary btn-sm">
                                        Edit
                                    </a>

                                    @if (!c.IsOpen)
                                    {
                                        <form asp-action="OpenChapter" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@c.Id" />
                                            <button class="btn btn-success btn-sm">Open</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="CloseChapter" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@c.Id" />
                                            <button class="btn btn-warning btn-sm">Close</button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-muted small mt-2">
                Note: Only one chapter can be open at a time. Opening a chapter automatically closes the previous one.
            </div>

        </div>
    </div>

</div>
