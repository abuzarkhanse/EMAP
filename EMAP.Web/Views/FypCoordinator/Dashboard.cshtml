@{
    ViewData["Title"] = "FYP Coordinator Dashboard";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">FYP Coordinator Dashboard</h2>
            <p class="text-muted mb-0">Manage scheduling, evaluations, and chapter announcements.</p>
        </div>
        <span class="badge bg-light text-dark border px-3 py-2">
            <i class="bi bi-person-circle me-1"></i>
            @User.Identity?.Name
        </span>
    </div>

    <div class="row g-3">

        <!-- Slot Allocation -->
        <div class="col-lg-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body">
                    <h5 class="mb-2">
                        <i class="bi bi-calendar-check me-2"></i>Slot Allocation
                    </h5>
                    <p class="text-muted small">
                        Assign defense date/time slots to proposals approved for defense.
                    </p>
                    <a asp-controller="FypCoordinator" asp-action="SlotAllocation"
                       class="btn btn-primary btn-sm">
                        Open Slot Allocation
                    </a>
                </div>
            </div>
        </div>

        <!-- Defense Evaluations -->
        <div class="col-lg-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body">
                    <h5 class="mb-2">
                        <i class="bi bi-clipboard-check me-2"></i>Defense Evaluations
                    </h5>
                    <p class="text-muted small">
                        Mark attendance, record feedback, and accept/reject after defense.
                    </p>
                    <a asp-controller="DefenseCommittee" asp-action="Index"
                       class="btn btn-success btn-sm">
                        Open Evaluations
                    </a>
                </div>
            </div>
        </div>

        <!-- Chapters -->
        <div class="col-lg-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body">
                    <h5 class="mb-2">
                        <i class="bi bi-journal-text me-2"></i>Chapters
                    </h5>
                    <p class="text-muted small">
                        Open the next chapter (SRS / Scope / Vision / System Overview) for students.
                    </p>
                    <a asp-controller="FypCoordinator" asp-action="Chapters"
                       class="btn btn-outline-primary btn-sm">
                        Manage Chapters
                    </a>
                </div>
            </div>
        </div>

        <!-- Chapter Approvals -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-journal-check me-1"></i>
                        Chapter Approvals
                    </h6>

                    <h3 class="text-primary">
                        @ViewBag.PendingChapterApprovals
                    </h3>

                    <p class="small text-muted mb-2">
                        Chapters approved by supervisors.
                    </p>

                    <a asp-controller="FypCoordinator"
                       asp-action="ChapterApprovals"
                       class="btn btn-sm btn-outline-primary">
                        Review Chapters →
                    </a>
                </div>
            </div>
        </div>


    </div>
</div>
