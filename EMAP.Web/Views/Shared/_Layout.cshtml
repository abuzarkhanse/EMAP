<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EMAP</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- App styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EMAP.Web.styles.css" asp-append-version="true" />
</head>

<body class="bg-light">

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">

                <!-- Brand -->
                <a class="navbar-brand fw-bold d-flex align-items-center"
                   asp-controller="Home" asp-action="Index">
                    <i class="bi bi-journal-bookmark-fill me-2 text-primary"></i>
                    EMAP
                </a>

                <!-- Toggle -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">

                    <!-- Left -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i> Home
                            </a>
                        </li>
                    </ul>

                    <!-- Right -->
                    <ul class="navbar-nav ms-auto align-items-lg-center">

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item me-2 text-muted small d-none d-lg-block">
                                Signed in as <strong>@User.Identity!.Name</strong>
                            </li>

                            <!-- ================= ADMIN MENU ================= -->
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#"
                                       role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-gear me-1"></i> Admin
                                    </a>

                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                                <i class="bi bi-speedometer2 me-2"></i> Dashboard
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="FypCall" asp-action="Index">
                                                <i class="bi bi-megaphone me-2"></i> FYP Calls
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Supervisor" asp-action="Index">
                                                <i class="bi bi-person-badge me-2"></i> Supervisors
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="UserAdmin" asp-action="Students">
                                                <i class="bi bi-mortarboard me-2"></i> Students
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            <!-- ================= COORDINATOR MENU ================= -->
                            @if (User.IsInRole("FYPCoordinator"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-diagram-3 me-1"></i> Coordinator
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" asp-controller="FypCoordinator" asp-action="Dashboard">
                                                Dashboard
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="FypCoordinator" asp-action="SlotAllocation">
                                                Slot Allocation
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="DefenseCommittee" asp-action="Index">
                                                Defense Evaluations
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="FypCoordinator" asp-action="Chapters">
                                                Chapters
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            <!-- ================= SUPERVISOR MENU ================= -->
                            @if (User.IsInRole("Supervisor"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#"
                                       role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-person-video3 me-1"></i> Supervisor
                                    </a>

                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Supervisor" asp-action="Dashboard">
                                                <i class="bi bi-kanban me-2"></i> Dashboard
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Supervisor" asp-action="PendingRequests">
                                                <i class="bi bi-inbox me-2"></i> Student Requests
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Supervisor" asp-action="Proposals">
                                                <i class="bi bi-file-earmark-text me-2"></i> Proposals
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            <!-- LOGOUT -->
                            <li class="nav-item ms-lg-3">
                                <form asp-area="Identity"
                                      asp-page="/Account/Logout"
                                      asp-route-returnUrl="~/"
                                      method="post">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm"
                                   asp-area="Identity"
                                   asp-page="/Account/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4">

        <!-- ✅ GLOBAL ALERTS (SUCCESS / ERROR / WARNING / INFO) -->
        <partial name="_Alerts" />

        @RenderBody()
    </main>

    <footer class="border-top bg-white">
        <div class="container py-3 text-center small text-muted">
            © 2025 EMAP: Editorial Management & Automation Platform
            <div>Final Year Project | Develop by Abuzar Khan</div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>